<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 读取外部存储权限（选择图片） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight"
        android:usesCleartextTraffic="true">

        <!-- Persona列表页面（启动页） -->
        <activity
            android:name=".ui.persona.PersonaListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Persona编辑页面 -->
        <activity
            android:name=".ui.persona.PersonaEditActivity"
            android:parentActivityName=".ui.persona.PersonaListActivity" />

        <!-- Persona主页 -->
        <activity
            android:name=".ui.persona.PersonaProfileActivity"
            android:parentActivityName=".ui.persona.PersonaListActivity" />

        <!-- 聊天页面 -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:parentActivityName=".ui.persona.PersonaProfileActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- 社交广场页面 -->
        <activity
            android:name=".ui.social.SocialSquareActivity"
            android:parentActivityName=".ui.persona.PersonaListActivity" />

        <!-- 发帖页面 -->
        <activity
            android:name=".ui.social.CreatePostActivity"
            android:parentActivityName=".ui.social.SocialSquareActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- 关注列表页面 -->
        <activity
            android:name=".ui.social.FollowListActivity"
            android:parentActivityName=".ui.persona.PersonaListActivity" />

        <!-- 帖子详情页面 -->
        <activity
            android:name=".ui.social.PostDetailActivity"
            android:parentActivityName=".ui.social.SocialSquareActivity"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>